<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
</table>
<p><%= link_to "Follow: #{user.follower.count}", users_follow_list_path(user.id) %></p>
<p><%= link_to "Follower: #{user.followed.count}", users_follower_list_path(user.id) %></p>
<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'Unfollow', unfollow_path(user.id), method: :POST, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Follow', follow_path(user.id), method: :POST, class: "btn btn-success" %>
  <% end %>
<% end %>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>