<h2><strong>Follow List</strong></h2>
<thead>
  <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="5"></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @user.following_user.each do |user| %>
    <tr>
      <td>
        <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
      </td>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= link_to "Follow: #{user.follower.count}", users_follow_list_path(user.id) %></td>
      <td><%= link_to "Follower: #{user.followed.count}", users_follower_list_path(user.id) %></td>
      <td><%= link_to "show", user_path(user) %></td>
    </tr>
  <% end %>
</tbody>